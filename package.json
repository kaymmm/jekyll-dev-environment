{
  "name": "jekyll-dev-environment",
  "version": "1.0.0",
  "description": "Tutorial for creating a website using Jekyll for hosting on GitHub.",
  "main": "index.js",
  "sass_includes": "./bower_components/bootstrap/scss",
  "font_list": "bower_components/font-awesome/fonts/* bower_components/font-mfizz/fonts/*",
  "jekyll_dir": "_site",
  "devDependencies": {
    "bower": "^1.7.4",
    "browserify": "^13.0.0",
    "buildify":"^0.4.0",
    "copyfiles":"^0.2.1",
    "eslint": "^1.10.3",
    "live-reload":"^1.1.0",
    "mkdirp":"^0.5.1",
    "node-sass": "^3.4.2",
    "parallelshell":"^2.0.0",
    "rimraf":"^2.5.2",
    "sass-lint": "^1.5.0",
    "uglify-js": "^2.6.2",
    "watch-run": "^1.2.4"
  },
  "scripts": {
    "clean": "rimraf $npm_package_jekyll_dir; rimraf assets/javascript/*.min.js; rimraf assets/css",
    "assets": "parallelshell \"npm run styles\" \"npm run scripts\"",
    "assets:vendor": "parallelshell \"node build_vendor.js js\" \"node build_vendor.js css\" \"npm run fonts\"",
    "fonts": "copyfiles -f $npm_package_font_list assets/fonts",
    "jekyll:build": "jekyll build",
    "jekyll:serve": "jekyll serve --port 9090 --no-watch",
    "jslint": "eslint assets/javascript/main.js",
    "prescripts": "npm run jslint && mkdirp $npm_package_jekyll_dir/assets/javascript",
    "scripts": "browserify assets/javascript/main.js > $npm_package_jekyll_dir/assets/javascript/main.js && uglifyjs $npm_package_jekyll_dir/assets/javascript/main.js > assets/javascript/main.min.js",
    "scripts:watch": "browserify assets/javascript/main.js > $npm_package_jekyll_dir/assets/javascript/main.js && uglifyjs $npm_package_jekyll_dir/assets/javascript/main.js > $npm_package_jekyll_dir/assets/javascript/main.min.js",
    "sasslint": "sass-lint assets/styles/main.scss",
    "prestyles": "npm run sasslint && mkdirp assets/css",
    "styles": "node-sass --output-style compressed --include-path $npm_package_sass_includes --follow assets/scss/style.scss > assets/css/style.min.css",
    "styles:watch": "node-sass --output-style compressed --include-path $npm_package_sass_includes --follow assets/scss/style.scss > $npm_package_jekyll_dir/assets/css/style.min.css",
    "watch:assets": "watch-run -p 'assets/javascript/*.js,assets/scss/**/*.{scss,sass}' parallelshell \"npm run styles:watch\" \"npm run scripts:watch\"",
    "watch:jekyll": "watch-run -p '*.{html,md},_includes/*.{html,md},_layouts/*,_posts/*,_templates/*,assets/images/*' npm run jekyll:build",
    "livereload": "live-reload --port 9091 $npm_package_jekyll_dir/",
    "serve": "parallelshell \"npm run assets\" \"npm run assets:vendor\" && parallelshell \"npm run jekyll:serve\" \"npm run livereload\" \"npm run watch:scripts\" \"npm run watch:styles\" \"npm run watch:jekyll\"",
    "jshint": "jshint assets/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaymmm/jekyll-dev-environment.git"
  },
  "keywords": [
    "jekyll",
    "github",
    "gh-pages",
    "bower",
    "npm"
  ],
  "author": "Keith Miyake <kmiyake@gc.cuny.edu> (http://github.com/kaymmm)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kaymmm/jekyll-dev-environment/issues"
  },
  "homepage": "https://kaymmm.github.io/jekyll-dev-environment"
}
